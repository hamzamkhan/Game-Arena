@model Game_Arena.ViewModels.GameFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Game</h2>

@using (Html.BeginForm("Save", "Games"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(g => g.Game.Name)
        @Html.TextBoxFor(g => g.Game.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Game.GenreId)
        @Html.DropDownListFor(g => g.Game.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.GenreId)
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Game.NumberInStock)
        @Html.TextBoxFor(g => g.Game.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.NumberInStock)
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Game.NumberAvailable)
        @Html.TextBoxFor(g => g.Game.NumberAvailable, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.NumberAvailable)
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Game.Price)
        @Html.TextBoxFor(g => g.Game.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.Price)
    </div>

    @Html.HiddenFor(g => g.Game.Id)



    <button type="submit" class="btn btn-primary">Save</button>
}


